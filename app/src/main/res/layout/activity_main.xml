<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_auto_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:inputType="textAutoCorrect"
        android:hint="Enter Text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_suggestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Get Suggestions"
        app:layout_constraintTop_toBottomOf="@id/et_auto_correct"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_get_suggestion"
         />

</androidx.constraintlayout.widget.ConstraintLayout>